
{{>navbar this}}
<div id="top">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupTitle">{{formtype}}</h5>
      </div>
      <div class="modal-body">
        {{#if editor}}
        <form method="POST" action="#">
          <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" id="titleText" placeholder={{placeholderTitle}}>
          </div>
          <div class="form-group">
            <label>Catagory</label>
            <input type="text" class="form-control" id="catagoryText" placeholder={{placeholderCatagory}}>
            <label>Article Body</label>
            <textarea rows="4" cols="50" required></textarea>
          </div>
        </form>
        {{else}}
        <form id="accountAuth">
          <div class="form-group">
            <label for="usernameText">Username</label>
            <input type="text" class="form-control" id="usernameText" placeholder={{placeholderUsername}}>
          </div>
          <div class="form-group">
            <label for="passwordText">Password</label>
            <input type="password" class="form-control" id="passwordText" placeholder={{placeholderPassword}}>
          </div>
          {{#if signup}}
            <p>Select your role</p>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Choose" id="vanilla" value="Vanilla">
            <label class="form-check-label" for="vanilla">Vanilla</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Choose" id="editor" value="Editor">
            <label class="form-check-label" for="editor">Editor</label>
          </div>
          {{/if}}
        </form>
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-info" id="submitBtn">{{formtype}}</button>
      </div>
    </div>
  </div>
</div>