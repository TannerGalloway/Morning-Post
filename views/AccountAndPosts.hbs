
{{>navbar this}}
<div id="top">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{formtype}}</h5>
      </div>
      <div class="modal-body">
        {{#if editor}}
        <form >
          <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control titleText" placeholder="{{placeholderTitle}}">
            <label>Category</label>
            <input type="text" class="form-control catagoryText" placeholder="{{placeholderCatagory}}">
            <label>Article Body</label>
            <textarea rows="6" cols="62" id="articleBody"></textarea>
          </div>
        </form>
        {{else}}
        <form id="accountAuth">
          <div class="form-group">
            <label for="usernameText">Username</label>
            <input type="text" class="form-control" id="usernameText" placeholder="{{placeholderUsername}}">
          </div>
          <div class="form-group">
            <label for="passwordText">Password</label>
            <input type="password" class="form-control" id="passwordText" placeholder="{{placeholderPassword}}">
          </div>
          {{#if signup}}
            <p>Select your role</p>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Choose" id="vanilla" value="Vanilla">
            <label class="form-check-label" for="vanilla">Vanilla</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Choose" id="editor" value="Editor">
            <label class="form-check-label" for="editor">Editor</label>
          </div>
          {{/if}}
        </form>
        {{/if}}
      </div>
      <div class="modal-footer">
        {{#if editor}}
        <button type="submit" class="btn btn-info articleSubmitBtn">{{formtype}}</button>
        {{else}}
        <button type="submit" class="btn btn-info" id="accountSubmitBtn">{{formtype}}</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>