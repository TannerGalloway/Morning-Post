
{{>navbar this}}
<div class="container">
  <div class="users">
    <div class="content">
      <div class="header">
        <h5 class="center">Users</h5>
      </div>
      <div class="content-body">
        {{#unless users}}
        <div>
          <h5 class="error center">No Users Found</h5>
        </div>
        {{else}}
        <div>
          {{#each users}}
          <div class="content">
            <div class="article-heading">
              <div class="userActionBtns">
                <button type="button" class="btn btn-danger userBtn" id={{@key}} {{this}}>Ban</button>
              </div>
              <h5 class="Author">{{username}}</h5>
              <h6 class="Role">Role: {{role}}</h6>
            </div>
          </div>
          {{/each}}
        </div>
        {{/unless}}
      </div>
    </div>
  </div>
</div>